<div class="container">

  <%= render partial: "users/shared/cover" %>

  <main id="profile">
    <!-- Search Header -->
    <div class="row">
      <div class="box box-header header-title col">
        <header>
          <h2><%= pluralize(@friends.count, 'friend') %></h2>
        </header>
      </div>
    </div><!-- end row -->

    <!-- Search Body -->
    <div class="row">
      <section class="box box-body padding-top padding-bottom col">
        <div class="row">         
          <% if @friends.count == 0 %>
            <p class="text-center margin-top padding-bottom">
              Find people you may know by searching for their names!
            </p>
          <% else %>
            <% @friends.each do |friend| %>
              <div class="col-12 col-md-6">
                <div class="item-box">
                  <%= link_to user_path(friend) do %>
                    <div class="friend-img">
                      <%= image_tag friend.picture_url %>
                    </div>
                  <% end %>
                  <div class="friend-details">
                    <%= link_to friend.full_name, user_path(friend) %>
                    <small><%= pluralize(friend.friends.count, 'friend') %></small>
                  </div> 
                  <div class="friend-button">               
                  <%= render_add_friend_or_unfriend(friend) %>   
                  </div>       
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </section>
    </div><!-- end row -->
  </main>
</div>
